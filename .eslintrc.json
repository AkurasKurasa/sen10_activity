{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],      // Enforces semicolons always
    "no-unused-vars": "warn",          // Warns if variables are unused
    "no-console": "off"                // Allows console.log (disable if you prefer to block it)
  }
}
